
  {% comment %}
    Banner slim type
  {% endcomment %}
  
  <div class="bannerSlim bannerSlim--{{ section.id }} bannerSlim--{{ section.settings.colour }} image-to-the-{{ section.layout }}">
    <div class="bannerSlim__text">
        <div class="bannerSlim__text__constraint">
          <div class="colour--red {{ section.settings.subheading_size }}">{{ section.settings.subheading}}</div>
          <h1 class="colour--white {{ section.settings.heading_size }}"><b>{{ section.settings.heading}}</b></h1>
          {{ section.settings.text }}
          {%- if section.settings.button_label != blank -%}
            <p>
              <a href="{{ section.settings.button_link }}" class="button button--yellow">{{ section.settings.button_label }}</a>
              {%- if section.settings.second_button_label != blank -%}
                <a href="{{ section.settings.second_button_link }}" class="button button--yellow">{{ section.settings.second_button_label }}</a>
              {%- endif -%}
            </p>
          {%- endif -%}
        </div>
    </div>
    <div class="bannerSlim__image" >
        <img loading="lazy" data-parallax="-0.2"
            srcset="{{ section.settings.image | image_url: width: 480 }} 480w,
                    {{ section.settings.image | image_url: width: 800 }} 800w,
                    {{ section.settings.image | image_url: width: 1920 }} 1600w,"
            sizes="(max-width: 600px) 480px,
                   (max-width: 1000px) 800px,
                   1000px"
            src="{{ section.settings.image | image_url: width: 1920 }}"
            alt="{{ section.settings.image.alt | escape }}"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}">
    </div>
  </div>
   
  
  

{% schema %}
