      "label": "Text colour",
      "options": [
        {
          "value": "light",
          "label": "light"
        },
        {
          "value": "dark",
          "label": "dark"
        }
       ]
      },
    {
      "type": "select",
      "id": "subheading_size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        },
        {
          "value": "h5",
          "label": "h5"
        },
        {
          "value": "h6",
          "label": "h6"
        }
      ],
      "default": "h4",
      "label": "Heading size"
    },   
    {
      "type": "richtext",
      "id": "heading",
      "default": "<p>Heading</p>",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
